<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <div class="row">
    
    <div class="col-md-8">
      <div class="post-card mb-4 p-4">
        <h1 class="fw-bold display-5"><%= post.title %></h1>
        <small class="text-muted"><%= post.date %></small>
        <hr>
        <p class="lead"><%= post.description %></p>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="post-card p-3">
        <h5 class="mb-3 text-center">Manage Post</h5>
        <a href="/edit/<%= post.id %>" class="btn btn-outline-primary w-100 mb-2">
          Edit Post
        </a>
    
        <form action="/delete/<%= post.id %>" method="POST">
          <button class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure?')">
            Delete Post
          </button>
        </form>
      </div>
    </div>

  </div>
</div>

<%- include("partials/footer.ejs") %>